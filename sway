# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Your preferred terminal emulator
set $term kitty
# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
#set $menu pkill -usr1 volund #$RICE/launcher.sh
set $menu $RICE/launcher.sh

#       <border>  <background> <text>  <indicator> <child_border>
client.focused     #5E81ACFF #00000000  #FFFFFFFF #80808080   #5E81ACFF
client.unfocused   #00000000 #00000000  #FFFFFFFF #80808080   #80808080
client.focused_inactive #00000000 #00000000  #FFFFFFFF #80808080   #80808080

hide_edge_borders both

for_window [app_id="^volund$"] floating enable, border none
for_window [app_id="^termite$"] opacity 0.9

default_border pixel 2
gaps outer 15
gaps inner 5

input "1133:49970:Logitech_Gaming_Mouse_G502" {
  accel_profile flat
  scroll_factor 1
  pointer_accel -0.4
}

output * bg ~/.configs/wall.png fill
output eDP-1 pos 1920 1080 res 1920x1080
output DVI-D-1 pos 0 0 res 1920x1080
output HDMI-A-1 pos 1920 0 res 1920x1080 

workspace 1 output DVI-D-1 eDP-1
workspace 2 output DVI-D-1 eDP-1
workspace 3 output DVI-D-1 eDP-1
workspace 4 output DVI-D-1 eDP-1

workspace 5:2-1 output DVI-D-1 HDMI-A-1 HDMI-A-2 eDP-1
workspace 6:2-2 output DVI-D-1 HDMI-A-1 HDMI-A-2 eDP-1
workspace 7:2-3 output DVI-D-1 HDMI-A-1 HDMI-A-2 eDP-1
workspace 8:2-4 output DVI-D-1 HDMI-A-1 HDMI-A-2 eDP-1

workspace_auto_back_and_forth yes
### Key bindings
#
# Basics:
#
  # TERMINAL
  bindsym $mod+grave exec $term

  # PICK BROWSER
  bindsym $mod+Shift+r exec qutebrowser-container

  # CLOSE WINDOW
  bindsym $mod+Shift+q kill

  # LAUNCHER
  bindsym $mod+r exec $menu
  set $menu j4-dmenu-desktop --dmenu="bemenu -b --list 10"
  #SCREENSHOT
  bindsym Print exec $RICE/screenshot.sh
  
  bindsym $mod+e exec thunar

  floating_modifier $mod normal

  # reload the configuration file
  bindsym $mod+Shift+c reload

  # exit sway (logs you out of your Wayland session)
  bindsym $mod+Shift+Escape exec swaynag -t warning -m 'You sure mate?' -b 'Yessir' 'swaymsg exit'
  bindsym $mod+l exec $RICE/swaylock.sh

  # Brightness
  bindsym XF86MonBrightnessDown exec echo -- > /tmp/brightnessd.fifo
  bindsym XF86MonBrightnessUp exec echo + > /tmp/brightnessd.fifo

  # Audio
  bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ && kickbar
  bindsym XF86AudioLowerVolume exec amixer set Master 5%- && kickbar
  bindsym XF86AudioMute exec amixer set Master toggle && kickbar

  # Granular audio
  bindsym Shift+XF86AudioRaiseVolume exec amixer set Master 1%+ && kickbar
  bindsym Shift+XF86AudioLowerVolume exec amixer set Master 1%- && kickbar

  bindsym XF86AudioPlay exec mpc toggle && kickbar
  bindsym XF86AudioPrev exec mpc prev && kickbar
  bindsym XF86AudioNext exec mpc next && kickbar


#
# Moving around:
#
  # Move your focus around
  bindsym $mod+Shift+Tab focus left
  bindsym $mod+Left focus left  

  bindsym $mod+Down focus down
  bindsym $mod+Up focus up
  bindsym $mod+Tab focus right
  bindsym $mod+Right focus right

  # ditto, with arrow keys
  bindsym $mod+Shift+Left move left
  bindsym $mod+Shift+Down move down
  bindsym $mod+Shift+Up move up
  bindsym $mod+Shift+Right move right

  bindsym $mod+Ctrl+Left workspace prev
  bindsym $mod+Ctrl+Right workspace next

#
# Workspaces:
#
  # switch to workspace
  bindsym $mod+1 workspace 1
  bindsym $mod+2 workspace 2
  bindsym $mod+3 workspace 3
  bindsym $mod+4 workspace 4
 # move focused container to workspace
  bindsym $mod+Shift+1 move container to workspace 1
  bindsym $mod+Shift+2 move container to workspace 2
  bindsym $mod+Shift+3 move container to workspace 3
  bindsym $mod+Shift+4 move container to workspace 4

  bindsym $mod+Ctrl+1 workspace 5:2-1  
  bindsym $mod+Ctrl+2 workspace 6:2-2
  bindsym $mod+Ctrl+3 workspace 7:2-3
  bindsym $mod+Ctrl+4 workspace 8:2-4
  # move focused container to workspace  
  bindsym $mod+Ctrl+Shift+1 move container to workspace 5:2-1
  bindsym $mod+Ctrl+Shift+2 move container to workspace 6:2-2
  bindsym $mod+Ctrl+Shift+3 move container to workspace 7:2-3
  bindsym $mod+Ctrl+Shift+4 move container to workspace 8:2-4
  
#
# Layout stuff:
#
  # You can "split" the current object of your focus with
  # $mod+b or $mod+v, for horizontal and vertical splits
  # respectively.
  #bindsym $mod+b splith
  #bindsym $mod+v splitv

  # Switch the current container between different layout styles
  bindsym $mod+w layout toggle split tabbed
  #bindsym $mod+s layout stacking
  #bindsym $mod+w layout tabbed
  # Make the current focus fullscreen
  bindsym $mod+f fullscreen

  # Toggle the current focus between tiling and floating mode
  bindsym $mod+Shift+space floating toggle

  # Swap focus between the tiling area and the floating area
  bindsym $mod+space focus mode_toggle

  # move focus to the parent container
  bindsym $mod+a focus parent

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.

bar {
  position top
  strip_workspace_numbers yes

  pango_markup enabled
  font pango:VictorMono 9

  status_command $RICE/status_command.sh
  gaps 5 5

  colors {
    statusline #ffffff
    #background #323232
    background #00000000
    focused_workspace #808080FF #00000000 #FFFFFF
    active_workspace #00000000 #00000000 #FFFFFF
    inactive_workspace #32323200 #32323200 #FFFFFFFF
  }
}


#exec_always $RICE/launcher.sh
exec mako
exec thunar --daemon

